<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trannguyentanthuan2903.followshop.SuaLoaiSanPhamActivity">

    <include layout="@layout/layout_previous" />

    <ImageView
        android:id="@+id/suaHinhLoaiSp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        app:srcCompat="@drawable/android_4" />

    <EditText
        android:id="@+id/suaIdLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suaHinhLoaiSp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Id Loai" />

    <EditText
        android:id="@+id/tenLoaiSanPham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/suaIdLoai"
        android:layout_alignStart="@+id/suaIdLoai"
        android:layout_below="@+id/suaIdLoai"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Tên loại sản phẩm" />

    <Button
        android:textColor="#ffff"
        android:background="@drawable/custom_button_login"
        android:id="@+id/luuSuaLoaiSp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tenLoaiSanPham"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Lưu" />

</RelativeLayout>
