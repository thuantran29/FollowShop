<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="300dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9eaf2"
    tools:context="com.trannguyentanthuan2903.followshop.LoginActivity">


    <EditText
        android:paddingLeft="6dp"
        android:background="@drawable/custom_edittext"
        android:id="@+id/editTextUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập Email" />

    <EditText
        android:paddingLeft="6dp"
        android:background="@drawable/custom_edittext"
        android:hint="Nhập mật khẩu"
        android:id="@+id/editTextPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextUser"
        android:layout_below="@+id/editTextUser"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignLeft="@+id/editTextUser" />

    <Button
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button_login"
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/editTextPass"
        android:layout_alignStart="@+id/editTextPass"
        android:layout_below="@+id/editTextPass"
        android:text="Đăng Nhập"
        android:layout_alignRight="@+id/editTextPass"
        android:layout_alignLeft="@+id/editTextPass" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/textViewRegis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonLogin"
        android:layout_below="@+id/buttonLogin"
        android:layout_marginTop="12dp"
        android:text="Đăng kí tài khoản"
        android:layout_alignRight="@+id/buttonLogin" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/textViewForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewRegis"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/textViewRegis"
        android:text="Quên mật khẩu"
        android:layout_marginRight="19dp"
        android:layout_toLeftOf="@+id/textViewRegis" />


</RelativeLayout>
