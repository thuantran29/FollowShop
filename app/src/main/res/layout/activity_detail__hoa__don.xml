<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_previous"/>
    <TextView
        android:textColor="#ff00"
        android:text="Thông Tin Hóa Đơn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/android_4"
        android:layout_marginTop="32dp"
        android:id="@+id/imageViewDetailHD"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView

        android:text="Tên Sản Phẩm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/tenSP"
        android:textSize="18sp"
        android:layout_below="@+id/imageViewDetailHD"
        android:layout_alignLeft="@+id/imageViewDetailHD"
        android:layout_alignStart="@+id/imageViewDetailHD" />

    <TextView
        android:text="Giá Sản Phẩm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/giaSPHoaDon"
        android:textSize="18sp"
        android:layout_below="@+id/tenSP"
        android:layout_alignLeft="@+id/tenSP"
        android:layout_alignStart="@+id/tenSP" />

    <TextView
        android:text="Tên Khách Hàng "
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/tenKH"
        android:textSize="18sp"
        android:layout_below="@+id/giaSPHoaDon"
        android:layout_alignLeft="@+id/giaSPHoaDon"
        android:layout_alignStart="@+id/giaSPHoaDon" />

    <TextView
        android:text="Ngày Lập Hóa Đơn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/ngayHD"
        android:textSize="18sp"
        android:layout_below="@+id/tenKH"
        android:layout_alignLeft="@+id/tenKH"
        android:layout_alignStart="@+id/tenKH" />

</RelativeLayout>
