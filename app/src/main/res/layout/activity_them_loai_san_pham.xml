<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_them_loai_san_pham"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trannguyentanthuan2903.followshop.ThemLoaiSanPham">
   <include layout="@layout/layout_previous"/>
    <TextView
        android:text="Loại sản phẩm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewThemHoaDon"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="63dp"
        android:textColor="#ff00"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="37dp"
        android:id="@+id/editTextTenSPNhap"
        android:layout_below="@+id/textViewThemHoaDon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nhập ID loại " />

    <ImageView
        android:src="@drawable/android_4"
        android:id="@+id/imageViewHinhSPNhap"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/editTextGiaSPNhap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Thêm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/buttonThemLoaiNhap"
        android:layout_below="@+id/imageViewHinhSPNhap"
        android:layout_alignLeft="@+id/imageViewHinhSPNhap"
        android:layout_alignStart="@+id/imageViewHinhSPNhap"
        android:layout_alignRight="@+id/imageViewHinhSPNhap"
        android:layout_alignEnd="@+id/imageViewHinhSPNhap" />

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextGiaSPNhap"
        android:hint="Nhập tên loại"
        android:layout_below="@+id/editTextTenSPNhap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
